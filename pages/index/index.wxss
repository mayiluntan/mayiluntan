/**broadcast**/
.broadcast{
  background: #fff;
  width: 100%;
  height: 70rpx;
  margin: 15rpx 0;
  display: flex;
  font-size: 26rpx;
}
.broadcast swiper-item{  
  display: flex;
  align-items: center;
}
.broadcast .l{
  display:flex;
  flex: 1;
  align-items: center;
}
.broadcast .l .c{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  max-width:50vw;
}
.broadcast .l image{
  width: 40rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.broadcast .r{
  display:flex;
  justify-content: flex-end;
}
.broadcast .r .r1{
  color: #f00;
}
.broadcast .r .r2{
  padding: 0 20rpx;
}
/**cate**/
.all-cate{
  width: 100%;
  background: #fff;
  padding-bottom: 10rpx;
  height: 40vw;
}
.cate{
  background: #fff;
  width: 100%;
  display: flex;
  font-size: 12px;
  color: #808080;
}
.cate .cate-detail{
  width: 20%;
  text-align: center;
  padding: 2vw 0;
}
.cate image{
  width: 80rpx;
  height: 80rpx;
}
.cate-menu{
  width: 100%;
  background: #fff;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cate-menu view {
  width: 50%;
}
.cate-menu view view{
  background: #b5bdc0;
  width: 50rpx;
  height: 4rpx;
}
.cate-menu .cate-menu1{
  display: flex;
  justify-content:flex-end;
  margin-right: 10rpx;
}
.cate-menu .cate-menu2 view{
  margin-left: 10rpx;
}
.cate-menu .cate-select{
  background: #ff9800;
}

/**banner**/
.banner{
  width: 100%;
  margin: 15rpx 0;
  height: 28vw;
}
.banner image{
  width: 100%;
