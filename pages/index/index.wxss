}

/**content**/
.content{
  width: 100%;  
  background: #fff;
}
.title{
  height: 40rpx;
  display: flex;
  line-height: 40rpx;
  padding: 10rpx 0;
  width:100%;
  background:#fff;
  margin:10rpx 0;
}
.title .title-picker{
    width: 50%;
}
.title .title-border{
  width: 100%;
  display:flex;
  border-right: 1px solid #f0f2f2;
  justify-content: center;
}
.title .title-border2{
  width: 100%;
  display:flex;
  justify-content: center;
}
.title .title-area{
  width: 33%;
}
.title .title-border image{
  width: 30rpx;
  height: 20rpx;
  padding-left: 10rpx;
  align-self: center
}
.title .title-border2 image{
  width: 30rpx;
  height: 20rpx;
  padding-left: 10rpx;
  align-self: center
}

/**list-main**/
.list{
  padding:20rpx;
  border-bottom: 1px solid #e0e0e0;
  position: relative;
}
.list .list-main{
  display: flex;
}
.list .list-attribute{
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 0 20rpx;
  min-height:50rpx;
}
.list .list-attribute view{
  margin-right: 10rpx;
}
.list .list-pic{
  padding-right:30rpx;
}
.list .list-pic image{
  width: 176rpx;
  height: 176rpx;
}
.list .list-content{
  flex: 1;
}
.list .list-top{
  display: flex;
}
.list .list-title{
  display: flex;
}
.list .list-title view{
  height: 44rpx;
  line-height: 44rpx;
  overflow:hidden;
}
.list .list-title .list-cate{
  background: #f0a323;
  padding:0 10rpx;
  border-radius: 10rpx;
  color: #fff;
  margin-right: 30rpx;
}
.list .list-title .list-tname{
  flex: 1;
}
.list .list-third{
  display: flex;
  align-items: center;
}
.list .list-tag{
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}
.list .list-tag view{
  height: 44rpx;
  line-height: 44rpx;
  border: 1px solid #4188d2;
  border-radius: 10rpx;
  color: #4188d2;
  padding: 0 10rpx;
  margin-right: 30rpx;
  overflow:hidden;
  max-width:200rpx;
}
.list .list-left{
   flex:1;
}
.list .list-contact{
  text-align: right;
  border: 0;
  height: auto;
  line-height: auto;
  display: flex;
  align-items: center;
}
.list .list-contact .list-tel{
  margin-left:30rpx;
}
.list .list-contact image{
  width: 50rpx;
  height: 50rpx;
}
.list .list-contact .money{
  color: #666;
}
.list .list-intro{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #4c4c4c;
}
.list .list-time{
  padding-top:10rpx;
  color: #7f7f7f;
  text-align: right;
}
.list .to-top{
  position: absolute;
  top: 0;
  right: 0;
  padding: 10rpx 20rpx;
  color: #fff;
  background: #C20C1D;
  border-radius: 10rpx;
}
.tip-top1{
  position: fixed;
  right: 15vw;
  top: 0;
  z-index: 999;
}
.tip-top2{
  position: fixed;
  right: 120rpx;
  bottom: 40rpx;
  z-index: 999;
  display: flex;
  align-items: center;
}
.tip-top3{
  position: absolute;
  left: 30rpx;
  top: 70rpx;
  z-index: 999;
}
.tip-top .tip-img {
  padding: 0;
  margin: 0;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding-right: 14rpx;
}
.tip-top .tip-img2{
  justify-content: flex-start;
  padding-left:34rpx;
}
.tip-top .tip-img image{
  width: 30rpx;
  height: 20rpx;
}
.tip-top .tip-text{
  background: #000;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.publish{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: #f0a323;
  color: #fff;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  opacity:0.9;
}