  font-size:30rpx;
}
.top-banner{
  width: 100vw;
  height: 50vw;
}
.top-banner .banner-swiper{
  width: 100%;
  height: 100%;
}
.top-banner .banner-swiper image{
  width: 100%;
  height: 100%;
}
.top-banner .banner-swiper navigator{
  width: 100%;
  height: 100%;
}
.top-banner .city{
  display: flex;
  position: absolute;
  z-index: 100;
  top: 20rpx;
  left: 20rpx;
  height: 20rpx;
  color: #fff;
  font-size: 30rpx;
}
.top-banner .city .logo image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 20rpx;
}
.top{
  width: 100%;
  height:100rpx;
  position:relative;
  background: #f0a323;
  display: flex;
  align-items: center;
}
.top image{
  width: 100%;
  height:100%;
}
.top .title-top{
  width:100%;
  display: flex;
  position:absolute;
  left:0;
  top:0;
  color: #fff;
}
.top .title-top .weather{
  flex: 1;
  padding:10rpx 0 0 15rpx;
}
.top .title-top .exrate{
  justify-content:flex-end;
  padding:10rpx 15rpx 0 0 ;
}
.top .city{
  display: flex;
  color: #fff;
  justify-content: center;
  font-size: 16px;
  padding:0 40rpx;
}
.top .city .city-picker{
  display: flex;
}
.top .city .logo image{
  width: 70rpx;
  height: 30rpx;
  padding-right:20rpx;
}
.top .city .arrow{
  display:unset;
}
.top .city .arrow image{
  width: 30rpx;
  height: 20rpx;
  padding-left: 10rpx;
}
.top .search{
  display: flex;
  width: 90%;
  flex: 1;
}
.top .search input{
  background: #fff;
  border-radius:10rpx;
  margin: 0 auto;
  height:2em;
  width:90%;
}

