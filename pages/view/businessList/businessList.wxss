/**content**/
.content{
  width: 100%;  
  background: #fff;
  font-size: 30rpx;
}
.content .title{
  height: 40rpx;
  display: flex;
  line-height: 40rpx;
  padding: 10rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  background:#fff;
}
.content .division{
  height: 60rpx;
}
.content .title .title-picker{
  width: 33%;
}
.content .title .title-border{
  width: 100%;
  display:flex;
  border-right: 1px solid #f0f2f2;
  justify-content: center;
}

.content .title .title-border2{
  width: 100%;
  display:flex;
  justify-content: center;
}

.content .title .title-border image{
  width: 30rpx;
  height: 20rpx;
  padding-left: 10rpx;
  align-self: center
}
.content .title .title-border2 image{
  width: 30rpx;
  height: 20rpx;
  padding-left: 10rpx;
  align-self: center
}
.content .title .title-area{
  width: 33%;
}
/**list-main**/
.list{
  padding:20rpx;
  padding-bottom: 5rpx;
  border-bottom: 1px solid #e0e0e0;
}
.list .list-main{
  display: flex;
}
.list .list-pic{
  padding-right:30rpx;
}
.list .list-pic image{
  width: 176rpx;
  height: 176rpx;
}
.list .list-detail{
  width: 100%;
}
.list .list-top{
  /* display: flex; */
}
.list .list-title{
  display: flex;
}
.list .list-title view{
  height: 44rpx;
  line-height: 44rpx;
  overflow:hidden;
}
.list .list-title .list-cate{
  background: #f0a323;
  padding:0 10rpx;
  border-radius: 10rpx;
  color: #fff;
  margin-right: 30rpx;
}
.list .list-title .list-tname{
  flex: 1;
}
.list .list-attribute{
  display: flex;
  min-height:54rpx;
  padding-top:20rpx;
}
.list .list-tc{
  display: flex;
  align-items: flex-end;
}
.list .list-tag{
  margin-top: 10rpx;
  display: flex;
}
.list .list-tag view{
  height: 44rpx;
  line-height: 44rpx;
  border: 1px solid #4188d2;
  border-radius: 10rpx;
  color: #4188d2;
  padding: 0 10rpx;
  margin-right: 30rpx;
}
.list .list-contact{
  flex:1;
  display:flex;
  justify-content:flex-end;
}
.list .list-contact .list-tel{
  margin-left:30rpx;
}
.list .list-contact image{
  width: 50rpx;
  height: 50rpx;
}
.list .list-intro{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list .list-time{
  height: 40rpx;
  display: flex;
  line-height: 40rpx;
  padding-top: 10rpx 0;
  color: #7f7f7f;
  font-size:25rpx; 
}

.list .list-time .time{
  width: 50%;
  display:flex;
  border-right: 1px solid #f0f2f2;
}

.list .list-time .hot{
  width: 50%;
  display:flex;
  justify-content: center;
}
.none{
  text-align: center;
  color: #ccc;
  height: 200rpx;
  line-height: 200rpx;
}