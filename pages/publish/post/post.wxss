/* pages/publish/post/post.wxss */
page {
  background-color: #fff;
  font-size: 30rpx;
  color: #808080;
}
.content {
  position: relative;
}
.content textarea {
  width: 100%;
  height: 300rpx;
  overflow: auto;
}
.cate{
  padding: 20rpx 0;
}
.title{
  padding:20rpx 0;
  display: flex;
  align-items: center;
}
.title input{
  flex: 1;
}
.pic{
  display: flex;
  min-height: 200rpx;
  flex-wrap:wrap;
  padding: 20rpx 0;
}
.pic text{
  width: 100%;
}
.pic view{
  position: relative;
}
.pic image{
  width: 200rpx;
  height: 200rpx;
  margin:0 20rpx 20rpx 0;
}
.pic .del{
  position:absolute;
  width: 40rpx;
  height: 40rpx;
  top: 0;
  right: 0;
  z-index: 1;
}
.detail{
  border:1px solid #F0A232;
  margin: 20rpx 2vw;
  border-radius: 4rpx;
  padding-left:2vw;
  padding-right:2vw;
}
.detail .detail-list{
  width: 95vw;
  height: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  padding:30rpx 0;
}
.detail .no-border{
  border: 0;
}
.detail .detail-list .house-picker{
  width: 100%;
}
.detail .detail-list image{
  width: 20rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.detail .detail-list input{
  flex: 1;
}
.detail .detail-list .more{
  width: 14rpx;
  height: 24rpx;
}
.detail .detail-money input{
  padding-left: 10rpx;
}
.detail .tags{
  width: 95vw;
  border-bottom: 1px solid #efefef;
  padding-bottom:30rpx;
  display:flex;
  flex-wrap:wrap;
  overflow-wrap: break-word;
}
.detail .tags view{
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 10rpx;
  padding: 0 10rpx;
  margin:20rpx 20rpx 0 0;
  color: #666;
  border: 1px solid #ccc;
}
.detail .tags .on{
  color: #4188d2;
  border: 1px solid #4188d2;
}
.division{
  width: 100%;
  height: 30rpx;
  background: #f2f3f4;
}
.top-list{
  width: 95vw;
  padding:30rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
}
.top-list image{
  width: 14rpx;
  height: 24rpx;
  margin:0 20rpx;
}
.top-list .price,.day{
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.top-list .price{
 margin-right: 20rpx; 
}
.to-top text{
  flex: 1;
}
.to-top .switch{
  width: 90rpx;
  height: 50rpx;
  background: #32b16c;
  border-radius: 50rpx;
  display: flex;
  justify-content: flex-end;
  margin-right:20rpx;
}
.to-top .off{
  justify-content:flex-start;
  background: #d9d9d9;
}
.to-top .switch view{
  background: #fff;
  width: 48rpx;
  height: 48rpx;
  border:2rpx solid #cfcfcf;
  border-radius:48rpx;
}
.button{
  width: 100%;
  height: 100rpx;
  background: #f2f3f4;
  padding-top:100rpx;
}
.button view{
  width: 90vw;
  margin: 0 auto;
  text-align: center;
  background: #f0a232;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 10rpx;
}
